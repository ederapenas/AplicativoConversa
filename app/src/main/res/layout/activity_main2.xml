<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tv_desenvolvedores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Desenvolvedores:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:layout_marginTop="250dp"/>

    <Button
        android:id="@+id/btn_ederson"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desenvolvedores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_background"
        android:text="Ederson"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_igor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ederson"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_background"
        android:text="Igor"
        android:textColor="@color/white"
        android:textSize="20sp" />


</RelativeLayout>